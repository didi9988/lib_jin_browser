<?xml version="1.0" encoding="utf-8"?>

<android.gesture.GestureOverlayView
    android:id="@+id/gesture_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:eventsInterceptionEnabled="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gestureStrokeType="multiple"
    android:clipChildren="true">

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/webview_swipe_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <include layout="@layout/jin_include_main_browser" />

    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/media_list_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/media_list_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@drawable/side_nav_bar"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <ImageView
                            android:id="@+id/media_list_header_action_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_sort_by_size"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/media_list_header_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"
                        android:text="@string/music_title_txt"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:paddingRight="5dp"
                            android:textSize="12dp"
                            android:textColor="@android:color/white"
                            android:layout_gravity="center_vertical"
                            android:text="@string/music_all_play"/>
                        <CheckBox
                            android:id="@+id/play_all_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|center_vertical"
                            android:src="@drawable/ic_menu_mark"/>
                    </LinearLayout>
                </LinearLayout>



                <ListView
                    android:id="@+id/media_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_list_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:visibility="visible"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/tab_list_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@drawable/side_nav_bar"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <ImageView
                            android:id="@+id/tab_list_header_action_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_sort_by_size"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tab_list_header_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"
                        android:text="@string/tab_title_txt"/>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp">
                        <ImageView
                            android:id="@+id/tab_list_add_btn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_suggestions_add"/>
                    </FrameLayout>
                </LinearLayout>

                <ListView
                    android:id="@+id/tab_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@android:color/darker_gray"
                android:baselineAligned="false"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/open_tab_btn_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="#cccccc"
                    android:clickable="true">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_menu_tab"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.design.widget.NavigationView>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:fitsSystemWindows="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/setting_list_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/setting_list_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@drawable/side_nav_bar"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <ImageView
                            android:id="@+id/setting_list_header_action_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_sort_by_size"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/setting_draw_header_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"
                        android:text="@string/setting_title_txt"/>

                    <Button
                        android:id="@+id/setting_upgrade_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Upgrade"
                        android:visibility="gone"
                        android:src="@drawable/ic_menu_sort_by_size"/>

                </LinearLayout>

                <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:layout_weight="1"
                                android:text="@string/setting_full_screen_txt"/>
                            <CheckBox
                                android:id="@+id/setting_full_screen_ch"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:layout_weight="1"
                                android:text="@string/setting_visible_menu_bar_txt"/>
                            <CheckBox
                                android:id="@+id/setting_visible_menu_bar_ch"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:layout_weight="1"
                                android:text="@string/setting_activate_add_block"/>
                            <CheckBox
                                android:id="@+id/setting_activate_add_block_ch"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_clear_add_block_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:layout_weight="1"
                                android:text="@string/setting_clear_add_block"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_open_privacy_tab_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:layout_weight="1"
                                android:text="@string/setting_privacy_tab"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:baselineAligned="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_gesture_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:text="@string/gesture_setting_txt"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:baselineAligned="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_bookmark_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:text="@string/gesture_bookmark_txt"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:layout_weight="1"
                                android:text="@string/setting_no_use_cache"/>
                            <CheckBox
                                android:id="@+id/setting_no_use_cache_ch"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:baselineAligned="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_clear_cookie"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:text="@string/setting_clear_cookie"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:baselineAligned="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_clear_cache"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:text="@string/setting_clear_cache"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:baselineAligned="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_font_size_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:text="@string/setting_font_size"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingRight="30dp"
                                android:layout_weight="1">
                                <ImageButton
                                    android:id="@+id/setting_font_size_smaller"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@android:color/transparent"
                                    android:src="@drawable/ic_suggestions_sub"/>
                                <TextView
                                    android:id="@+id/setting_current_font_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:gravity="center_vertical|center_horizontal"
                                    android:layout_weight="1"
                                    android:textAlignment="gravity"/>
                                <ImageButton
                                    android:id="@+id/setting_font_size_bigger"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@android:color/transparent"
                                android:src="@drawable/ic_suggestions_add"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:baselineAligned="false"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/setting_about_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:textAlignment="gravity"
                                android:text="@string/setting_about_txt"/>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@android:color/darker_gray"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true">
                        <!--
                        <ImageView
                            android:id="@+id/add_end_draw_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:src="@drawable/ic_menu_invite"/>

                        <ImageView
                            android:id="@+id/delete_end_draw_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_delete"/>
                        <ImageView
                            android:id="@+id/check_all_end_draw_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_menu_mark"/>

                        -->
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/bookmark_list_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/bookmark_list_header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@drawable/side_nav_bar"
                    android:orientation="horizontal">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp">
                        <ImageView
                            android:id="@+id/bookmark_list_header_action_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_sort_by_size"/>
                    </FrameLayout>
                    <TextView
                        android:id="@+id/end_draw_header_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:textSize="20dp"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center_vertical"
                        android:text="@string/gesture_bookmark_txt"/>

                </LinearLayout>

                <ListView
                    android:id="@+id/bookmark_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@android:color/darker_gray"
                    android:baselineAligned="false"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/add_end_draw_btn"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="left"
                            android:src="@drawable/ic_menu_star"/>

                        <ImageView
                            android:id="@+id/delete_end_draw_btn"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_delete"/>
                        <ImageView
                            android:id="@+id/check_all_end_draw_btn"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="right"
                            android:src="@drawable/ic_menu_mark"/>
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>

</android.gesture.GestureOverlayView>